<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#feffc2"
    tools:context=".MainActivity">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timerSeekBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/EggimageView"
        android:layout_below="@+id/timerSeekBar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 : 00"
        android:id="@+id/timeTextView"
        android:layout_alignBottom="@+id/EggimageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="183dp"
        android:textSize="70sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO!"
        android:id="@+id/controllButton"
        android:layout_alignBottom="@+id/EggimageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:textSize="30sp"
        android:background="#d1d1d1"
        android:textColor="#ff2f24b0"
        android:onClick="controllTimer" />
</RelativeLayout>
